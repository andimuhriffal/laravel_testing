pipeline {
    agent { label 'agent-laravel' }

    environment {
        COMPOSE_PROJECT_NAME = "laravel"
        APP_CONTAINER = "laravel_app"
    }

    options {
        skipDefaultCheckout()
    }

    stages {
        stage('Prepare Workspace') {
            steps {
                script {
                    sh '''
                    echo "[INFO] Menghapus folder cache & storage jika dibutuhkan"
                    sudo rm -rf bootstrap/cache/* storage/framework/* storage/logs/* || true
                    '''
                }
                checkout scm
            }
        }

        stage('Ensure Laravel Container is Running') {
            steps {
                sh 'docker-compose up -d'
            }
        }

        stage('Clear Laravel Cache') {
            steps {
                sh """
                    docker exec ${APP_CONTAINER} php artisan config:clear
                    docker exec ${APP_CONTAINER} php artisan route:clear
                    docker exec ${APP_CONTAINER} php artisan view:clear
                """
            }
        }

        stage('Reload PHP-FPM (Optional)') {
            steps {
                // Hanya jika PHP-FPM berjalan sebagai service (misalnya dalam OS-based image)
                sh "docker exec ${APP_CONTAINER} service php8.1-fpm reload || true"
            }
        }
    }

    post {
        success {
            echo '✅ Laravel code changes deployed successfully.'
        }
        failure {
            echo '❌ Deployment failed.'
        }
    }
}
